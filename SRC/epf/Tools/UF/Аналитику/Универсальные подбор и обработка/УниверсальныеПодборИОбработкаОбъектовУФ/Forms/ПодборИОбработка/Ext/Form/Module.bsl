			ПроцессорВывода.Вывести(ПроцессорКД);
			
		Исключение
			Сообщить(ОписаниеОшибки());
			Возврат;
		КонецПопытки;
		
	КонецЕсли;
	
	МассивРеквизитов.Добавить("Выбрать");
	МассивРеквизитов.Добавить("Картинка");
	МассивРеквизитов.Добавить("Объект");
